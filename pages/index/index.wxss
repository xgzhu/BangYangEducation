/**index.wxss**/
.userinfo-old {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo {
  width: 750rpx;
  height: 280rpx;
}

.userinfo-left {
  display: inline-block;
  vertical-align:top;
  width: 280rpx;
  height: 280rpx;
}

.userinfo-right {
  display: inline-block;
  vertical-align:top;
  width: 470rpx;
  height: 280rpx;
}

.userinfo-right-up {
  padding-top: 66rpx;
  height: 70rpx;
}

/*这个线也可以用absolute position来解决*/
.userinfo-right-middle {
  background-color: black;
  margin-left: -34rpx;
  height: 6rpx;
}

.userinfo-right-down {
  padding-top: 10rpx;
  height: 126rpx;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin: 40rpx;
  border-style: solid;
  border-width: 6rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #333;
  font-size: 48rpx;
}

.userinfo-city {
  color: #777;
  font-size: 40rpx;
}

.userinfo-citychange {
  color: #aaa;
  font-size: 30rpx;
}
