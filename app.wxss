}

.teacher-title {
  font-size: 28px;
  text-align: center;
  color: #858;
  border-bottom: 3px solid #ffaaff;
  margin-bottom: 8px;
}

.parttime {
  background-color: #ccccff;
}

.parttime-border {
  width: 100%;
