.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


.student {
  background-color: #aaffff;
}

.student-border {
  width: 100%;
  height: 100%;
  border-style: solid;
  border-width: 2px;
  border-color: #aaffff;
}

.student-title {
  font-size: 28px;
  text-align: center;
  color: #588;
  border-bottom: 3px solid #aaffff;
  margin-bottom: 8px;
}

.teacher {
  background-color: #ffaaff;
}

